<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10sp"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:layout_marginBottom="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/account"
            android:id="@+id/profile_pic"
            android:layout_margin="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="20sp"
            android:id="@+id/user_name"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@id/profile_pic"/>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="7/2/2020 4:00 PM"/>

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_time"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:text="Virtual instructor"
            android:textColor="#000"
            android:textSize="18sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_post"
            android:id="@+id/text_post"
            android:text="Virtual instructor gives users different and unique facilities like meditation in VR, yoga on demand with a trained instructor including video guidance. Virtual reality is indeed a growing and powerful technology and in coming times we are going to see much more products related to it .Our app promotes the best use of it to the root level. .Our integration of meditation and VR is going to give users a new feeling and provides a better understanding of meditation.
"
            android:textSize="15sp"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/image_post"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_below="@id/heading"
            android:layout_marginTop="10sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:src="@drawable/resume_pic"
            android:visibility="gone" />





    <RelativeLayout
        android:id="@+id/q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_post"
        android:layout_marginTop="5sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#505392">



        <ImageView
            android:id="@+id/dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up_white"
            android:layout_marginEnd="10sp"
            android:layout_toStartOf="@id/like"
            android:padding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dislike"
            android:id="@+id/likes_no"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_toStartOf="@id/like"
            android:layout_marginEnd="20sp"
            android:text="5" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_toStartOf="@id/comment"
            android:padding="3dp"
            android:src="@drawable/ic_thumb_down_white" />


        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_toStartOf="@id/share"
            android:padding="3dp"
            android:src="@drawable/mode_comment_black" />


        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_toStartOf="@id/save"
            android:padding="3dp"
            android:src="@drawable/ic_share_purple" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd = "10sp"
            android:padding="3dp"
            android:src="@drawable/ic_arrow_downward_purple"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save"
            android:text="Save"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share"
            android:text="4"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_toStartOf="@id/save"
            android:layout_marginEnd="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:text="10"
            android:textColor="#000"
            android:layout_toStartOf="@id/share"
            android:textSize="15sp"
            android:layout_marginEnd="18sp"/>

        <TextView
            android:id="@+id/dislike_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/like"
            android:text="5"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_toStartOf="@id/comment"
            android:layout_marginEnd="22sp"/>



    </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>