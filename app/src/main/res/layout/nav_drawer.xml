<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="top"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="190sp"
        android:background="@drawable/marine_life">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic_nav"
            android:layout_width="190sp"
            android:layout_height="190sp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10sp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_below="@id/id"
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/user_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit"
        android:layout_marginTop="10sp"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_nav"
        android:layout_marginTop="10sp"
        android:text="Android Developer"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />

    <TextView
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_below="@id/designation"
        android:text="Student at Indian Instititue of Technonology, Roorkee"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"/>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/experience"
        android:text="Roorkee, India"
        android:layout_marginTop="5sp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"/>



    <Button
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@drawable/border_button"
        android:textColor="#FFFFFF"
        android:text="Sign out"
        android:layout_below="@id/place"
        android:layout_marginTop="200sp"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp" />

</RelativeLayout>