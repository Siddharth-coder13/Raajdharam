<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/bar_layout"
        android:layout_height="200sp"
        android:background="@color/colorPrimary">
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150sp"
        android:id="@+id/profile_pic_user"
        android:layout_height="150sp"
        android:layout_below="@id/toolbar_userProfile"
        android:layout_marginTop="80dp"
        android:src="@drawable/account"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:elevation="5sp"/>

    <TextView
        android:id="@+id/user_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="User"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="10sp"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/designation_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_user"
        android:layout_marginStart="20sp"
        android:textColor="#000"
        android:text="Designation"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/designation_user"
        android:layout_marginStart="20sp"
        android:textColor="#000"
        android:text="Bio"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="Follow"
            android:layout_marginStart="5sp"
            android:background="@drawable/border_button"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/view_post"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:text="View Posts"
            android:layout_weight="1"
            android:layout_marginStart="5sp"
            android:background="@drawable/border_button"
            android:textColor="#fff"
            android:textSize="18sp"/>


    </LinearLayout>



</RelativeLayout>