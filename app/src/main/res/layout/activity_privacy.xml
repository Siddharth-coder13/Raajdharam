<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".privacy">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:layout_centerHorizontal="true"
                android:textSize="35dp"
                android:layout_marginTop="20sp"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_toStartOf="@id/text_privacy"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="13sp"
                android:src="@drawable/ic_security_purple"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="#575454"
        android:id="@+id/circle1"
        android:layout_marginTop="25sp"
        android:layout_marginStart="20sp"
        android:layout_below="@id/toolbar_privacy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_privacy"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@id/circle1"
        android:layout_marginStart="10sp"
        android:text="Profile Check"
        android:textSize="25sp"
        android:textColor="#000"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="#575454"
        android:id="@+id/circle2"
        android:layout_marginTop="25sp"
        android:layout_marginStart="20sp"
        android:layout_below="@id/radio1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio1"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@id/circle2"
        android:layout_marginStart="10sp"
        android:text="Post"
        android:textSize="25sp"
        android:textColor="#000"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="#575454"
        android:id="@+id/circle3"
        android:layout_marginTop="25sp"
        android:layout_marginStart="20sp"
        android:layout_below="@id/radio2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio2"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@id/circle3"
        android:layout_marginStart="10sp"
        android:text="Comment"
        android:textSize="25sp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_below="@id/circle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who can check your profile?"
        android:textColor="#000"
        android:layout_marginTop="5sp"
        android:layout_marginStart="35sp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_below="@id/circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to post ?"
        android:textColor="#000"
        android:layout_marginTop="5sp"
        android:layout_marginStart="35sp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_below="@id/circle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to comment ?"
        android:textColor="#000"
        android:layout_marginTop="5sp"
        android:layout_marginStart="35sp"
        android:textSize="18sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio1"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="No one"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textSize="15sp"
            android:buttonTint="#000"
            android:text="Evereyone"/>

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio2"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Anonymously"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textSize="15sp"
            android:buttonTint="#000"
            android:text="By Name"/>

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio3"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="Anonymously"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textSize="15sp"
            android:buttonTint="#000"
            android:text="By Name"/>

    </RadioGroup>


</RelativeLayout>